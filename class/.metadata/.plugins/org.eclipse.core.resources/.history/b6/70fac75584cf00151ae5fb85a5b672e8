#include <iostream>
using namespace std;

private char alphabet [26];
private long longs [26];

int main() {
	char alphabet [26];
	long longs [26];
	for(int i = 0; i < 26; i++) {
		longs[i] = 0;
		alphabet[i] = 'a' + i;
	}
	cout << "Enter the cypher text (<Enter><Ctrl>-D to end): ";
	string text;
	cin >> text;

	return 0;
}
