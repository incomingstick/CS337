#include <iostream>
#include <fstream>
using namespace std;

int main() {
	cout << "Enter word to search: ";
	string search;
	cin << search;
	ifstream stream;
	stream.open("text.txt");
	string line;
	int lineNumber = 0;
	while(stream.is_open() && getline(stream, line)) {
		if(line.find(search))
			cout << search << "found in line " << lineNumber++;
	}
	return 0;
}
